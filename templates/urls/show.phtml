        </form>

        <div class="table-responsive mt-3">
            <table class="table table-bordered table-hover" data-test="checks">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Дата создания</th>
                </tr>
                </thead>
                <tbody>
                <?php if (!empty($checks)): ?>
                    <?php foreach ($checks as $check): ?>
                        <tr>
                            <td><?= htmlspecialchars($check->getId()) ?></td>
                            <td><?= htmlspecialchars($check->getCreatedAt()) ?></td>
                        </tr>
